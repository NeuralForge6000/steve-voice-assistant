# Steve Voice Assistant Environment Configuration
# Copy this file to .env and customize the values

# =============================================================================
# REQUIRED: Google AI API Key
# =============================================================================
# Get your API key from https://aistudio.google.com/
GOOGLE_AI_API_KEY=your_api_key_here

# =============================================================================
# SECURITY SETTINGS (Optional)
# =============================================================================

# API Usage Limits
STEVE_MAX_DAILY_CALLS=200
STEVE_MAX_HOURLY_CALLS=30
STEVE_MAX_SESSION_COST=5.00

# Resource Limits
STEVE_MIN_DISK_SPACE_MB=100
STEVE_MAX_MEMORY_PERCENT=85

# Cost Warnings
STEVE_COST_WARNING_THRESHOLD=0.50

# =============================================================================
# CONVERSATION SETTINGS (Optional)
# =============================================================================

# Enable conversation history (true/false)
STEVE_ENABLE_HISTORY=true

# Maximum conversation turns to keep in memory
STEVE_MAX_CONVERSATION_TURNS=20

# Maximum tokens to keep in conversation history
STEVE_MAX_HISTORY_TOKENS=8000

# =============================================================================
# AUDIO SETTINGS (Optional)
# =============================================================================

# Enable audio chimes (true/false)
STEVE_ENABLE_CHIMES=true

# Audio processing settings
STEVE_SILENCE_DURATION=4.0
STEVE_SILENCE_THRESHOLD=150
STEVE_MIN_SPEECH_DURATION=0.5

# Recording limits
STEVE_MAX_RECORDING_TIME=20

# =============================================================================
# VOICE SETTINGS (Optional)
# =============================================================================

# Text-to-Speech settings
STEVE_TTS_RATE=175
STEVE_TTS_VOLUME=0.8

# Wake word and goodbye phrases
STEVE_WAKE_WORD="hey steve"
STEVE_GOODBYE_WORD="goodbye steve"

# =============================================================================
# LOGGING SETTINGS (Optional)
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
STEVE_LOG_LEVEL=INFO

# Enable security event logging (true/false)
STEVE_ENABLE_SECURITY_LOGGING=true

# =============================================================================
# ADVANCED SETTINGS (Optional)
# =============================================================================

# Whisper model settings
STEVE_WHISPER_MODEL=turbo
STEVE_WHISPER_DEVICE=auto  # auto, cpu, cuda

# Audio format settings
STEVE_AUDIO_RATE=16000
STEVE_AUDIO_CHANNELS=1
STEVE_AUDIO_CHUNK=1024

# =============================================================================
# DEVELOPMENT SETTINGS (Development Only)
# =============================================================================

# Enable debug mode (true/false)
STEVE_DEBUG_MODE=false

# Enable test mode (true/false)
STEVE_TEST_MODE=false

# Mock API responses for testing (true/false)
STEVE_MOCK_API=false
